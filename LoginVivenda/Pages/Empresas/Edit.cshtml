@page
@model LoginVivenda.Pages.Empresas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empresa.Id" />
            <div class="form-group">
                <label asp-for="Empresa.Nome" class="control-label"></label>
                <input asp-for="Empresa.Nome" class="form-control" />
                <span asp-validation-for="Empresa.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.CNPJ" class="control-label"></label>
                <input asp-for="Empresa.CNPJ" class="form-control" />
                <span asp-validation-for="Empresa.CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.Telefone" class="control-label"></label>
                <input asp-for="Empresa.Telefone" class="form-control" />
                <span asp-validation-for="Empresa.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.Email" class="control-label"></label>
                <input asp-for="Empresa.Email" class="form-control" />
                <span asp-validation-for="Empresa.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.Contato" class="control-label"></label>
                <input asp-for="Empresa.Contato" class="form-control" />
                <span asp-validation-for="Empresa.Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
